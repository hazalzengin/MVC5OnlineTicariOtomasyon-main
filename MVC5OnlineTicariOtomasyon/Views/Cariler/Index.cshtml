@using MVC5OnlineTicariOtomasyon.Models.Classes
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<table class="table table-striped">
    <tr>
        <th>Cari Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var x in Model){
        <tr>
            <td>@x.CariId</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cariler/CariSil/@x.CariId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cariler/CariGetir/@x.CariId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cariler/MusteriSatis/@x.CariId" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>

        </tr>
    }
</table>
<a href="/Cariler/YeniCari/" class="btn btn-info">Yeni Cari Ekle</a>
