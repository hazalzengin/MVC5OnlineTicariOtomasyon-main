@using MVC5OnlineTicariOtomasyon.Models.Classes;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var u in Model)
    {
<tr>
    <td>@u.Urunid</td>
    <td>@u.UrunAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.Alisfiyat</td>
    <td>@u.Satisfiyat</td>
    <td>@u.Kategori.KategoriAdi</td>
    <td>@u.UrunGorsel</td>
    <td>  <a href="/Urun/UrunSil/@u.Urunid" class="btn btn-danger">Sil</a></td>
    <td>  <a href="/Urun/UrunGetir/@u.Urunid" class="btn btn-success">Güncelle</a></td>


</tr>


    }
   
</table>
<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Urun</a>


